<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Fit"
        parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Theme.Fit"
        parent="Base.Theme.Fit" />
    <!-- Tema para la Splash Screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- 1. Define el color de fondo de la pantalla de bienvenida --><item
        name="windowSplashScreenBackground">#FFFFFF</item>
        <!-- 2. Define el icono que se mostrará en el centro.
        Usa el icono de lanzamiento que ya tiene tu app. -->
        <item
            name="windowSplashScreenAnimatedIcon">@drawable/outline_briefcase_meal_24</item>
        <!-- 3. MUY IMPORTANTE: Define el tema que se usará DESPUÉS de la
       splash.
        Usa el tema que ya tiene tu app. -->
        <item
            name="postSplashScreenTheme">@style/Theme.Fit</item>
    </style>
</resources>