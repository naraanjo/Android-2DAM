<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".MainActivity">

    <!-- ************ TOOLBAR - Verde Azulado Oscuro ************ -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:title="Encuesta"
        app:titleTextAppearance="@style/ToolbarTitleStyle" />

    <!-- Contenedor del formulario, se ha reducido el padding vertical -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- ************ SECCIÓN 1: Nombre y Anónimo ************ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/colorCard"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Datos de Usuario"
                    android:textColor="@color/colorTextAccent"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Contenedor para Nombre y Switch en la misma fila -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/tvNombre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Tu nombre..."
                        android:inputType="textPersonName"
                        android:minHeight="40dp"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="14sp"
                        tools:text="Tu nombre..." />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/swtchAnonimo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"
                        android:layout_marginStart="8dp"
                        android:text="Anónimo"
                        android:checked="false"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="14sp"
                        app:thumbTint="@color/switch_thumb_color"
                        app:trackTint="@color/switch_track_color"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- ************ SECCIÓN 2: Sistema Operativo (RadioGroup) - COMPACTO ************ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/colorCard"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:paddingEnd="10dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sistema operativo preferido"
                    android:textColor="@color/colorTextAccent"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <RadioButton
                        android:id="@+id/rdbMac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="24dp"
                        android:text="Mac"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>

                    <RadioButton
                        android:id="@+id/rdbWindows"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="24dp"
                        android:text="Windows"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>

                    <RadioButton
                        android:id="@+id/rdbLinux"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="24dp"
                        android:text="Linux"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>
                </RadioGroup>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- ************ SECCIÓN 3: Especialidad (Checkboxes) - COMPACTO ************ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/colorCard"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:paddingEnd="10dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Especialidad"
                    android:textColor="@color/colorTextAccent"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkDAM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="24dp"
                    android:text="DAM"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"/>

                <CheckBox
                    android:id="@+id/checkASIR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="24dp"
                    android:text="ASIR"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"/>

                <CheckBox
                    android:id="@+id/checkDAW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="24dp"
                    android:text="DAW"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- ************ SECCIÓN 4: Horas de Estudio (SeekBar) ************ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/colorCard"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Horas de estudio"
                    android:textColor="@color/colorTextAccent"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Contenedor para SeekBar y el valor en la misma fila -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/seekBarEstudio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="10"
                        android:progress="4"
                        android:minHeight="40dp"
                        android:progressTint="@color/colorAccent"
                        android:thumbTint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/tvHorasEstudio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:minWidth="30dp"
                        android:text="4"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- ************ SECCIÓN 5: Botones ************ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:gravity="center">

            <!-- Botones optimizados horizontalmente -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnValidar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="VALIDAR"
                android:textSize="12sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:minWidth="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReiniciar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="REINICIAR"
                android:textSize="12sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:minWidth="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCuantas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="CUANTAS"
                android:textSize="12sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:minWidth="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResumen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RESUMEN"
                android:textSize="12sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:minWidth="0dp"/>
        </LinearLayout>

        <!-- ************ SECCIÓN 6: Historial de Encuestas (AMPLIADO) ************ -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_background"
            android:padding="8dp"
            android:fillViewport="true">

            <TextView
                android:id="@+id/tvHistorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Historial:"
                android:textColor="@color/colorTextAccent"
                android:textSize="12sp"
                android:padding="8dp"
                android:lineSpacingExtra="2dp"
                android:scrollbars="vertical"
                android:textIsSelectable="true"
                android:ellipsize="none"
                android:maxLines="9999"
                android:gravity="start|top" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>
